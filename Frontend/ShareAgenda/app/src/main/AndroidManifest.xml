<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cosin.shareagenda">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".config.AgendaApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">

        <activity android:name=".activity.CreateEventAcitivty" />
        <activity android:name=".activity.CreateGroupActivity" />
        <activity android:name=".activity.GroupsActivity" />
        <activity android:name=".activity.ContactsActivity" />
        <activity android:name=".activity.WeeklyFriendActivity" />
        <activity android:name=".activity.SearchFriendsActivity" />
        <activity android:name=".activity.SignUpActivity" />
        <activity
            android:name=".activity.CalendarActivity"
            android:launchMode="singleTask" />
        <activity android:name=".activity.GroupEventsActivity" />
        <activity android:name=".activity.WeeklyActivity" />
        <activity android:name=".activity.RequestActivity" />
        <activity android:name=".activity.MainActivity" />
        <activity android:name=".activity.ProfileActivity" />
        <activity android:name=".activity.LaunchActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>