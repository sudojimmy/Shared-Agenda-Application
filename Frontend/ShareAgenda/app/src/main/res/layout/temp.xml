    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginLeft="30sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="10sp"
                android:background="@color/dark_goldenrod"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="100sp">

                <TextView
                    android:id="@+id/startTimeTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="let do it!"
                    android:textColor="@color/friends_calendar_label"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/startTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13:30"
                    android:textColor="@color/ivory"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="30sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="50sp"
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:layout_weight="1"
                android:background="@color/peru"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/startDateTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start Date"
                    android:textSize="18sp"
                    android:textColor="@color/friends_calendar_label"/>
                <TextView
                    android:id="@+id/startDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12-30"
                    android:textSize="18sp"
                    android:textColor="@color/ivory"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginLeft="10sp"
                android:layout_marginRight="30sp"
                android:layout_marginTop="60sp"
                android:background="@color/dark_goldenrod"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="100sp">

                <TextView
                    android:id="@+id/endTimeTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="It ends at:"
                    android:textSize="18sp"
                    android:textColor="@color/friends_calendar_label"/>
                <TextView
                    android:id="@+id/endTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14:30"
                    android:textSize="18sp"
                    android:textColor="@color/ivory"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="10sp"
                android:layout_marginRight="30sp"
                android:layout_marginTop="50sp"
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:layout_weight="1"
                android:background="@color/peru"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/endDateTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="End Date"
                    android:textSize="18sp"
                    android:textColor="@color/friends_calendar_label"/>
                <TextView
                    android:id="@+id/endDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12-31"
                    android:textSize="18sp"
                    android:textColor="@color/ivory"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
